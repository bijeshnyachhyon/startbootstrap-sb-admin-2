pipeline {
    agent any

environment {
        CONTAINER_NAME = 'bijesh-jenkins-build-website-dev'
    }

    stages {

	stage('Repo Scan') {
            steps {
                echo 'Repo scan with Trivy'
                sh 'trivy repo https://github.com/bijeshnyachhyon/startbootstrap-sb-admin-2.git'
            }
        }

        stage('Code fetch') {
            steps {
                echo 'Clone code from Github'
                git url:'https://github.com/bijeshnyachhyon/startbootstrap-sb-admin-2.git', branch: 'dev'
            }
        }
        
        stage('Build') {
            steps {
                sh 'docker build -t bijesh-jenkins-build-website-dev .'
            }
        }

	stage('Scan Docker image') {
            steps {
                echo 'Scan Docker image'
                sh 'trivy image bijesh-jenkins-build-website-dev'
            }
        }

        stage('Deploy') {
            steps {

                echo 'Deploy on container'
				sh 'docker run -d -p 81:80 bijesh-jenkins-build-website-dev'
            }
        }
    }
}
