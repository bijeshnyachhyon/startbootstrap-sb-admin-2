pipeline {
    agent any

    stages {
        stage('Code fetch') {
            steps {
                echo 'Clone code from Github'
                git url:'https://github.com/bijeshnyachhyon/startbootstrap-sb-admin-2.git', branch: 'master'
            }
        }
        
        stage('Build') {
            steps {
                sh 'docker build -t bijesh-jenkins-build-website .'
            }
        }
        
        stage('Image Scan') {
            steps {
                echo 'Docker Image scanning with Trivy'
                sh 'trivy image my-new-website'
            }
        }

        stage('Deploy') {
            steps {

                echo 'Deploy on container'
                sh 'docker stop $(docker ps -q)'
				sh 'docker run -d -p 81:80 bijesh-jenkins-build-website-dev'
            }
        }
    }
}
