pipeline {
    agent any

    stages {
        stage('Code fetch') {
            steps {
                echo 'Clone code from Github'
                git url:'https://github.com/bijeshnyachhyon/startbootstrap-sb-admin-2.git', branch: 'dev'
            }
        }
        
        stage('Build') {
            steps {
                sh 'docker build -t bijesh-jenkins-build-website-dev .'
            }
        }
        
        stage('Stop Previous Container') {
            steps {
                script {
                    sh '''
                        CONTAINER_NAME="bijesh-jenkins-build-website-dev"
                        
                        # Check if the container is running
                        if [ "$(docker ps -q -f name=$CONTAINER_NAME)" ]; then
                            echo "Stopping running container: $CONTAINER_NAME"
                            docker stop $CONTAINER_NAME
                            echo "Removing container: $CONTAINER_NAME"
                            docker rm $CONTAINER_NAME
                        else
                            echo "No running container found with name: $CONTAINER_NAME"
                        fi
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {

                echo 'Deploy on container'
				sh 'docker run -d -p 81:80 bijesh-jenkins-build-website-dev'
            }
        }
    }
}
