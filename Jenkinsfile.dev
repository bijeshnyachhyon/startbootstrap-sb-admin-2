pipeline {
    agent any

environment {
        CONTAINER_NAME = 'bijesh-jenkins-build-website-dev'
    }

    stages {
        stage('Code fetch') {
            steps {
                echo 'Clone code from Github'
                git url:'https://github.com/bijeshnyachhyon/startbootstrap-sb-admin-2.git', branch: 'dev'
            }
        }
        
        stage('Build') {
            steps {
                sh 'docker build -t bijesh-jenkins-build-website-dev .'
            }
        }
        
        stage('Stop Previous Container') {
            steps {
                script {
                    // Check if the container is running and stop it
                    def containerId = sh(script: "docker ps -q -f name=${CONTAINER_NAME}", returnStdout: true).trim()
                    if (containerId) {
                        echo "Stopping container: ${CONTAINER_NAME}"
                        sh "docker stop ${CONTAINER_NAME}"
                        sh "docker rm ${CONTAINER_NAME}"
                    } else {
                        echo "No running container named ${CONTAINER_NAME} found"
                    }
                }
            }
        }

        stage('Deploy') {
            steps {

                echo 'Deploy on container'
				sh 'docker run -d -p 81:80 bijesh-jenkins-build-website-dev'
            }
        }
    }
}
